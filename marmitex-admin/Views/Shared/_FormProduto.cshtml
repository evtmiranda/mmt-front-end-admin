@model ClassesMarmitex.Produto

<div class="col-md-12">
    <div class="form-group">
        <label for="nome">nome produto *</label>

        @if (Model != null)
        {
            <input type="hidden" name="id" value="@Model.Id" />
            <input type="text" id="nome" name="Nome" value="@Model.Nome" class="form-control" />
        }
        else
        {
            <input type="text" id="nome" name="Nome" class="form-control" />
        }


    </div>
</div>
<div class="col-md-12">
    <div class="form-group">
        <label for="descricao">descrição</label>

        @if (Model != null)
        {
            <input type="text" id="descricao" name="Descricao" value="@Model.Descricao" class="form-control" />
        }
        else
        {
            <input type="text" id="descricao" name="Descricao" class="form-control" />
        }


    </div>
</div>
<div class="col-md-12">
    <div class="form-group">
        <label for="cardapioProduto">cardápio *</label>

        <select class="form-control" name="IdMenuCardapio">
            <option value="0" selected>escolher cardápio...</option>
            
            @foreach (ClassesMarmitex.MenuCardapio cardapio in ViewBag.MenuCardapio)
            {
                if (Model != null)
                {
                    if (Model.IdMenuCardapio == cardapio.Id)
                    {
                        <option value="@cardapio.Id" selected>@cardapio.Nome</option>
                    }
                    else
                    {
                        <option value="@cardapio.Id">@cardapio.Nome</option>
                    }
                }
                else
                {
                    <option value="@cardapio.Id">@cardapio.Nome</option>
                }
            }
        </select>

    </div>
</div>
<div class="col-md-12">
    <div class="form-group">
        <label for="valor">R$ preço *</label>

        @if (Model != null)
        {
            <input type="text" id="valor" name="Valor" value="@Model.Valor" class="form-control" onkeyup="formataValor(this, event)" />
        }
        else
        {
            <input type="text" id="valor" name="Valor" class="form-control" onkeyup="formataValor(this, event)" />
        }


    </div>
</div>
<div class="col-md-12">
    <div class="form-group">

        <label for="file">imagem do produto *</label>

        @if (Model != null)
        {
            <input type="file" name="file" id="file" value="@Model.Imagem"/>
        }
        else
        {
            <input type="file" name="file" id="file" onclick="ValidarImagem()"/>
        }

    </div>
</div>
<div class="col-md-12">
    <div class="form-group">
        <div class="checkbox">
            <label>
                @Html.CheckBox("Ativo", true)
                produto ativo?
            </label>
        </div>
    </div>
</div>