@model List<ClassesMarmitex.MenuCardapio>

<h1 class="text-left">Produtos</h1>

<ul class="breadcrumb">
    <li>
        <i class="fa fa-globe"></i>
        <a href="@Session["urlBase"]/Home">Inicio</a>
    </li>
    <li>
        <i class="fa fa-shopping-cart"></i>
        <a href="@Session["urlBase"]/Produto/">Produtos</a>
    </li>
</ul>

<div class="text-right">
    <a href="/Produto/Adicionar" class="btn btn-success">adicionar produto</a>
</div>
<hr />

<div class="col-md-12">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>nome</th>
                    <th>descrição</th>
                    <th>cardápio</th>
                    <th>R$ preço</th>
                    <th>imagem</th>
                    <th>ativo</th>
                    <th>ações</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var cardapio in Model)
                    {
                        if (cardapio.Produtos != null)
                        {
                            foreach (var produto in cardapio.Produtos)
                            {
                                if (produto.Ativo)
                                {
                                    <tr>
                                        <td>
                                            <a href="@Session["urlBase"]/Produto/Detalhes/@produto.Id" title="ver detalhes">
                                                @produto.Nome
                                            </a>
                                        </td>
                                        <td>@produto.Descricao</td>
                                        <td>@cardapio.Nome</td>
                                        <td>@produto.Valor</td>
                                        <td><img src="@Session["CaminhoImagem"]/@produto.Imagem" class="img-responsive" style="height: 70px;" alt="produto"></td>
                                        <td>@(produto.Ativo == true ? "Sim" : "Não")</td>
                                        <td>
                                            <a href="@Session["urlBase"]/Produto/Editar/@produto.Id" style="color: #1a9c21"><i class="glyphicon glyphicon-edit" title="Editar"></i></a>
                                            <a href="@Session["urlBase"]/Produto/Desativar/@produto.Id" style="color: #E67E22"><i class="glyphicon glyphicon-off" title="Desativar"></i></a>
                                            <a href="@Session["urlBase"]/Produto/Excluir/@produto.Id" style="color: #bc2026"><i class="glyphicon glyphicon-remove" title="Excluir"></i></a>
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    <tr class="danger">
                                        <td>
                                            <a href="@Session["urlBase"]/Produto/Detalhes/@produto.Id" title="ver detalhes">
                                                @produto.Nome
                                            </a>
                                        </td>
                                        <td>@produto.Descricao</td>
                                        <td>@cardapio.Nome</td>
                                        <td>@produto.Valor</td>
                                        <td><img src="@Session["CaminhoImagem"]/@produto.Imagem" class="img-responsive" style="height: 70px;" alt="produto"></td>
                                        <td>@(produto.Ativo == true ? "Sim" : "Não")</td>
                                        <td>
                                            <a href="@Session["urlBase"]/Produto/Editar/@produto.Id" style="color: #1a9c21"><i class="glyphicon glyphicon-edit" title="Editar"></i></a>
                                            <a href="@Session["urlBase"]/Produto/Desativar/@produto.Id" style="color: #E67E22"><i class="glyphicon glyphicon-off" title="Desativar"></i></a>
                                            <a href="@Session["urlBase"]/Produto/Excluir/@produto.Id" style="color: #bc2026"><i class="glyphicon glyphicon-remove" title="Excluir"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>