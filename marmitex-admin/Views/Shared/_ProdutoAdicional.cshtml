@model List<ClassesMarmitex.DadosProdutoAdicional>

<h1 class="text-left">Produtos adicionais</h1>

<ul class="breadcrumb">
    <li>
        <i class="fa fa-globe"></i>
        <a href="@Session["urlBase"]/Home">Inicio</a>
    </li>
    <li>
        <i class="fa fa-glass"></i>
        <a href="@Session["urlBase"]/ProdutoAdicional/">Produtos Adicionais</a>
    </li>
</ul>

<div class="text-right">
    <a href="/ProdutoAdicional/Adicionar" class="btn btn-success">adicionar produto adicional</a>
</div>
<hr />

<div class="col-md-12">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>nome</th>
                    <th>descrição</th>
                    <th>ativo</th>
                    <th>ações</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var prodAdicional in Model)
                    {
                        if (prodAdicional.Ativo)
                        {
                            <tr>
                                <td>
                                    <a href="@Session["urlBase"]/ProdutoAdicional/Detalhes/@prodAdicional.Id" title="ver detalhes">
                                        @prodAdicional.Nome
                                    </a>
                                </td>
                                <td>@prodAdicional.Descricao</td>
                                <td>@(prodAdicional.Ativo == true ? "Sim" : "Não")</td>
                                <td>
                                    <a href="@Session["urlBase"]/ProdutoAdicional/Editar/@prodAdicional.Id" style="color: #1a9c21"><i class="glyphicon glyphicon-edit" title="Editar"></i></a>
                                    <a href="@Session["urlBase"]/ProdutoAdicional/Desativar/@prodAdicional.Id" style="color: #E67E22"><i class="glyphicon glyphicon-off" title="Desativar"></i></a>
                                    <a href="@Session["urlBase"]/ProdutoAdicional/Excluir/@prodAdicional.Id" style="color: #bc2026"><i class="glyphicon glyphicon-remove" title="Excluir"></i></a>
                                </td>
                            </tr>
                        }
                        else
                        {
                            <tr class="danger">
                                <td>
                                    <a href="@Session["urlBase"]/ProdutoAdicional/Detalhes/@prodAdicional.Id" title="ver detalhes">
                                        @prodAdicional.Nome
                                    </a>
                                </td>
                                <td>@prodAdicional.Descricao</td>
                                <td>@(prodAdicional.Ativo == true ? "Sim" : "Não")</td>
                                <td>
                                    <a href="@Session["urlBase"]/ProdutoAdicional/Editar/@prodAdicional.Id" style="color: #1a9c21"><i class="glyphicon glyphicon-edit"></i></a>
                                    <a href="@Session["urlBase"]/ProdutoAdicional/Desativar/@prodAdicional.Id" style="color: #E67E22"><i class="glyphicon glyphicon-off"></i></a>
                                    <a href="@Session["urlBase"]/ProdutoAdicional/Excluir/@prodAdicional.Id" style="color: #bc2026"><i class="glyphicon glyphicon-remove"></i></a>
                                </td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>