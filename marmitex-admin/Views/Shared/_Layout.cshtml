<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TáSaindo</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/simple-sidebar.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/sidebar.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Bangers" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid">
        <nav class="navbar navbar-default" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#menuResponsivo"></button>
                <a href="@Session["urlBase"]/Home" class="navbar-brand">TáSaindo</a>
            </div>
            <div class="collapse navbar-collapse" id="menuResponsivo">
                <ul class="nav navbar-nav navbar-right">

                    <li class="dropdown" style="margin-right: 10px">
                        @{ if (Session["usuarioLogado"] == null)
                            {
                                <a class="dropdown-toggle" data-toggle="dropdown">
                                    meu perfil <span class="glyphicon glyphicon-user"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a href="~/Login">entrar</a></li>
                                </ul>
                            }
                            else
                            {
                                ClassesMarmitex.Usuario usuarioLogado = (ClassesMarmitex.Usuario)Session["usuarioLogado"];

                                string nomeUsuario = usuarioLogado.Apelido != null ? usuarioLogado.Apelido : usuarioLogado.Nome;

                                <a class="dropdown-toggle" data-toggle="dropdown">
                                    Olá @nomeUsuario <span class="glyphicon glyphicon-user"></span>
                                </a>

                                <ul class="dropdown-menu">
                                    <li><a href="#">meus dados</a></li>
                                    <li><a href="#" onclick="Redirecionar(@string.Format("'{0}', '{1}'", @Session["urlBase"], "/Login/Deslogar"))">sair</a></li>
                                </ul>
                            }
                        }
                    </li>

                </ul>
            </div>
        </nav>
    </div>

    <div class="container-fluid body-content">
        <div class="row profile">
            <div class="col-md-3">
                <nav class="navbar" role="navigation">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#menuConfiguracoes">
                            <span class="sr-only">Menu</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="collapse navbar-collapse" id="menuConfiguracoes">
                        <div class="profile-sidebar">
                            <!-- SIDEBAR USERPIC -->
                            <div class="profile-userpic">
                                <img src="https://pbs.twimg.com/profile_images/615635979504873472/U5f0ySHv.png" class="img-responsive" alt="logo">
                            </div>
                            <!-- END SIDEBAR USERPIC -->
                            <!-- SIDEBAR USER TITLE -->
                            <div class="profile-usertitle">
                                <div class="profile-usertitle-name">
                                    <h2>Spoleto</h2>
                                </div>
                            </div>
                            <!-- END SIDEBAR BUTTONS -->
                            <!-- SIDEBAR MENU -->
                            <div class="profile-usermenu">
                                <ul class="nav">
                                    <li class="active">
                                        <a href="/Home/Index">
                                            <i class="fa fa-bar-chart"></i>
                                            Dashboard
                                        </a>
                                    </li>
                                    <li>
                                        <a href="/Pedido/Index">
                                            <i class="fa fa-star"></i>
                                            Pedidos
                                        </a>
                                    </li>
                                    <li>
                                        <a href="/Parceiro/Index">
                                            <i class="fa fa-handshake-o fa-lg"></i>
                                            Parceiros
                                        </a>
                                    </li>
                                    <li>
                                        <a href="/Cardapio/Index">
                                            <i class="fa fa-cutlery"></i>
                                            Cardápio
                                        </a>
                                    </li>
                                    <li>
                                        <a href="/Produto/Index">
                                            <i class="fa fa-shopping-cart"></i>
                                            Produtos
                                        </a>
                                    </li>
                                    <li>
                                        <a href="/HorarioEntrega/Index">
                                            <i class="glyphicon glyphicon-time"></i>
                                            Horários de entrega
                                        </a>
                                    </li>
                                    <li>
                                        <a href="/FormaPagamento/Index">
                                            <i class="fa fa-credit-card"></i>
                                            Formas de pagamento
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fa fa-line-chart"></i>
                                            Relatórios
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <!-- END MENU -->
                        </div>
                    </div>
                </nav>
            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/marmitex.js"></script>


