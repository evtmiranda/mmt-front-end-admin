@model ClassesMarmitex.HorarioEntrega

@{
    ViewBag.Title = "Horário de entrega";
}

<div class="col-md-12">
    <div class="form-group">
        <p class="vermelho-marmitex">@Html.ValidationMessage("Horario")</p>
        <label for="nome">horário *</label>

        @if (Model != null)
        {
            <input type="hidden" name="id" value="@Model.Id" />
            <input type="time" id="horario" name="Horario" value="@Model.Horario" class="form-control" />
        }
        else
        {
            <input type="time" id="horario" name="Horario" class="form-control" />
        }

    </div>
</div>

<div class="col-md-12">
    <div class="form-group">
        <div class="checkbox">
            <label>
                @Html.CheckBox("Ativo", true)
                horário de entrega ativo?
            </label>
        </div>
    </div>
</div>




<div class="col-md-12">
    <div class="form-group">
        @if (ViewBag.MensagemCadHorarioEntrega != null)
            {
            <p class="vermelho-marmitex">@ViewBag.MensagemCadHorarioEntrega</p>
        }

        @if (ViewBag.MensagemEditarHorarioEntrega != null)
        {
            <p class="vermelho-marmitex">@ViewBag.MensagemEditarHorarioEntrega</p>
        }
    </div>
</div>