@model ClassesMarmitex.Produto

@{
    ViewBag.Title = "Produto";
}

<div class="profile-content-backfull">
    <h2>Editar produto</h2>
    <p style="font:italic;" class="vermelho-marmitex">os campos com * são de preenchimento obrigatório</p>
    <div class="col-md-10">
        @if (ViewBag.MensagemCarregamentoEditarProduto != null)
        {
            <script>
                swal({
                    title: 'Oops',
                    html: "@ViewBag.MensagemCarregamentoEditarProduto",
                    type: 'error',
                    confirmButtonText: 'Ok',
                    confirmButtonColor: corConfirmacao,
                    cancelButtonColor: corCancelar
                }).then(function () {
                    window.location = "@Session["urlBase"]/Produto/";
                    });
            </script>
        }
        else
        {
            <form method="post" action="@Session["urlBase"]/Produto/EditarProduto" enctype="multipart/form-data">

                @Html.Partial("_FormProduto")

                <div class="col-md-12">
                    <div class="buttons-formcontrol">
                        <input type="submit" class="btn btn-success" value="salvar" />
                    </div>
                </div>

            </form>
        }
    </div>
</div>
