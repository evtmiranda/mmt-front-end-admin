@model ClassesMarmitex.Brinde

<div class="profile-content-backfull">
    <h2>Editar brinde</h2>
    <p style="font:italic;" class="vermelho-marmitex">os campos com * são de preenchimento obrigatório</p>
    <div class="col-md-10">

        @if (ViewBag.MensagemCarregamentoEditarBrinde != null)
        {
            <script>
                swal({
                    title: 'Oops',
                    html: "@ViewBag.MensagemCarregamentoEditarBrinde",
                    type: 'error',
                    confirmButtonText: 'Ok'
                }).then(function () {
                    window.location = "@Session["urlBase"]/Brinde/";
                    });
            </script>
        }
        else
        {
            <form method="post" action="@Session["urlBase"]/Brinde/EditarBrinde" enctype="multipart/form-data">

                @Html.Partial("_FormBrinde")

                <div class="col-md-12">
                    <div class="buttons-formcontrol">
                        <input type="submit" class="btn btn-success" value="salvar" />
                    </div>
                </div>

            </form>
        }

    </div>
</div>
