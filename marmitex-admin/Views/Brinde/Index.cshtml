@model IList<ClassesMarmitex.Brinde>

<div class="col-md-12">
    <div class="profile-content-backfull">
        <h1 class="text-left">Brindes</h1>

        <ul class="breadcrumb">
            <li>
                <i class="fa fa-globe"></i>
                <a href="@Session["urlBase"]/Home">Inicio</a>
            </li>
            <li>
                <i class="fa fa-handshake-o fa-lg"></i>
                <a href="@Session["urlBase"]/Brinde/">Brindes</a>
            </li>
        </ul>

        <div class="text-right">
            <a href="/Brinde/Adicionar" class="btn btn-success">adicionar brinde</a>
        </div>
        <hr />

        <div class="col-md-12">
            @*se houver alguma mensagem relacionada a exclusão de brindes, lança um alert com a mensagem*@
            @if (ViewBag.MensagemExcluirBrinde != null)
            {
                <script>
                    swal(
                        'Oops...',
                        'não foi possível excluir. por favor, tente novamente ou entre em contato com o administrador',
                        'error'
                    );
                </script>
            }


            @if (Model != null)
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>nome</th>
                                <th>descrição</th>
                                <th>imagem</th>
                                <th>ativo</th>
                                <th>ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var brinde in Model)
                            {
                                if (brinde.Ativo)
                                {
                                    <tr>
                                        <td>@brinde.Nome</td>
                                        <td>@brinde.Descricao</td>
                                        <td><img src="@Session["CaminhoImagensBrindes"]/@brinde.Imagem" class="img-responsive" style="height: 70px;" alt="produto"></td>
                                        <td>@(brinde.Ativo == true ? "Sim" : "Não")</td>
                                        <td>
                                            <a href="@Session["urlBase"]/Brinde/Editar/@brinde.Id" style="color: #1a9c21"><i class="glyphicon glyphicon-edit"></i></a>
                                            <a href="@Session["urlBase"]/Brinde/Desativar/@brinde.Id" style="color: #E67E22"><i class="glyphicon glyphicon-off"></i></a>
                                            <a href="@Session["urlBase"]/Brinde/Excluir/@brinde.Id" style="color: #bc2026"><i class="glyphicon glyphicon-remove"></i></a>
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    <tr class="danger">
                                        <td>@brinde.Nome</td>
                                        <td>@brinde.Descricao</td>
                                        <td><img src="@Session["CaminhoImagensBrindes"]/@brinde.Imagem" class="img-responsive" style="height: 70px;" alt="produto"></td>
                                        <td>@(brinde.Ativo == true ? "Sim" : "Não")</td>
                                        <td>
                                            <a href="@Session["urlBase"]/Brinde/Editar/@brinde.Id" style="color: #1a9c21"><i class="glyphicon glyphicon-edit"></i></a>
                                            <a href="@Session["urlBase"]/Brinde/Desativar/@brinde.Id" style="color: #E67E22"><i class="glyphicon glyphicon-off"></i></a>
                                            <a href="@Session["urlBase"]/Brinde/Excluir/@brinde.Id" style="color: #bc2026"><i class="glyphicon glyphicon-remove"></i></a>
                                        </td>
                                    </tr>
                                }
                            }

                    </table>
                </div>

            }
            else
            {
                <div class="text-center">
                    <p>@ViewBag.MensagemBrindes</p>
                </div>
            }

        </div>
    </div>
</div>