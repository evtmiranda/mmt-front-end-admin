@model IList<ClassesMarmitex.Brinde>

<div class="col-md-12">
    <div class="profile-content-backfull">
        <h1 class="text-left">Brindes</h1>

        <ul class="breadcrumb">
            <li>
                <i class="fa fa-globe"></i>
                <a href="@Session["urlBase"]/Home">Inicio</a>
            </li>
            <li>
                <i class="fa fa-handshake-o fa-lg"></i>
                <a href="@Session["urlBase"]/Brinde/">Brindes</a>
            </li>
        </ul>

        <div class="text-right">
            <a href="/Brinde/Adicionar" class="btn btn-success">adicionar brinde</a>
        </div>
        <hr />

        <div class="col-md-12">
            @if (@ViewBag.MensagemBrindes != null)
            {
                <div class="text-center">
                    <p>@ViewBag.MensagemBrindes</p>
                </div>
            }
            else if (Model != null)
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>nome</th>
                                <th>descrição</th>
                                <th>imagem</th>
                                <th>ativo</th>
                                <th>ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var brinde in Model)
                            {
                                if (brinde.Ativo)
                                {
                                    <tr class="table-mmt">
                                        <td>@brinde.Nome</td>
                                        <td>@brinde.Descricao</td>
                                        <td><img src="@Session["CaminhoImagensBrindes"]/@brinde.Imagem" class="img-responsive" style="height: 70px;" alt="produto"></td>
                                        <td>@(brinde.Ativo == true ? "Sim" : "Não")</td>
                                        <td>
                                            <button class="btn-link" style="color: #1a9c21" onclick="IrParaUrl('@Session["urlBase"]/Brinde/Editar/@brinde.Id')" title="Editar"><i class="glyphicon glyphicon-edit"></i></button>
                                            <button class="btn-link" style="color: #E67E22" onclick="Get('@Session["urlBase"]/Brinde/Desativar/@brinde.Id')" title="Desativar"><i class="glyphicon glyphicon-off"></i></button>
                                            <button class="btn-link" style="color: #bc2026" onclick="Excluir('@Session["urlBase"]/Brinde/Excluir/@brinde.Id')" title="Excluir"><i class="glyphicon glyphicon-remove"></i></button>
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    <tr class="danger table-mmt">
                                        <td>@brinde.Nome</td>
                                        <td>@brinde.Descricao</td>
                                        <td><img src="@Session["CaminhoImagensBrindes"]/@brinde.Imagem" class="img-responsive" style="height: 70px;" alt="produto"></td>
                                        <td>@(brinde.Ativo == true ? "Sim" : "Não")</td>
                                        <td>
                                            <button class="btn-link" style="color: #1a9c21" onclick="IrParaUrl('@Session["urlBase"]/Brinde/Editar/@brinde.Id')" title="Editar"><i class="glyphicon glyphicon-edit"></i></button>
                                            <button class="btn-link" style="color: #E67E22" onclick="Get('@Session["urlBase"]/Brinde/Desativar/@brinde.Id')" title="Desativar"><i class="glyphicon glyphicon-off"></i></button>
                                            <button class="btn-link" style="color: #bc2026" onclick="Excluir('@Session["urlBase"]/Brinde/Excluir/@brinde.Id')" title="Excluir"><i class="glyphicon glyphicon-remove"></i></button>
                                        </td>
                                    </tr>
                                }
                            }

                    </table>
                </div>

            }
        </div>
    </div>
</div>