@model ClassesMarmitex.DadosHorarioEntrega

<head>
    <link href="~/Content/bubble.css" rel="stylesheet" />
</head>

<div class="profile-content-backfull">
    <h1 class="text-left">Horários de entrega e dias de funcionamento</h1>

    <div class="text-right">
        <a href="/HorarioEntrega/Adicionar" class="btn btn-success">adicionar horário de entrega</a>
    </div>

    <hr />

    <div class="col-md-12 bubble text-center">
        @if (Model != null)
        {
            <h2>Tempo mínimo de antecedência pedido</h2>

            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="col-md-6">
                        <h4>tempo</h4>
                        <div class="bubble-item">
                            <p>@Model.TempoAntecedenciaEntrega.MinutosAntecedencia minutos</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h4>ações</h4>
                        <div class="text-center bubble-item">
                            <button class="btn-link" style="color: #1a9c21" onclick="IrParaUrl('@Session["urlBase"]/HorarioEntrega/EditarTempoAntecedencia/@Model.TempoAntecedenciaEntrega.Id')" title="Editar"><i class="glyphicon glyphicon-edit"></i></button>
                        </div>
                    </div>
                </div>
            </div>

            <hr />

            <h2 style="margin-top: 10%">Tempo mínimo de cancelamento</h2>

            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="col-md-6">
                        <h4>tempo</h4>
                        <div class="bubble-item">
                            <p>@Model.TempoAntecedenciaCancelamentoEntrega.MinutosAntecedencia minutos</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h4>ações</h4>
                        <div class="text-center bubble-item">
                            <button class="btn-link" style="color: #1a9c21" onclick="IrParaUrl('@Session["urlBase"]/HorarioEntrega/EditarTempoAntecedenciaCancelamento/@Model.TempoAntecedenciaEntrega.Id')" title="Editar"><i class="glyphicon glyphicon-edit"></i></button>
                        </div>
                    </div>
                </div>
            </div>

            <hr />

            <h2 style="margin-top: 10%">Horários de entrega</h2>

            int i = 0;

            foreach (var horarioEntrega in Model.HorariosEntrega)
            {
                i++;

                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <div class="col-md-6">
                            @if (i == 1)
                            { <h4>horário</h4> }
                            <div class="bubble-item">
                                <p>@horarioEntrega.Horario</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            @if (i == 1)
                            { <h4>status</h4> }
                            <div class="bubble-item bubble-status">
                                @if (horarioEntrega.Ativo)
                                {
                                    <input type="checkbox" value="None" id="status_@horarioEntrega.Id" name="check" checked />
                                }
                                else
                                {
                                    <input type="checkbox" value="None" id="status_@horarioEntrega.Id" name="check" />
                                }
                                <label for="#"></label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            @if (i == 1)
                            { <h4>ações</h4> }
                            <div class="text-center bubble-item">
                                <button class="btn-link" style="color: #1a9c21" onclick="IrParaUrl('@Session["urlBase"]/HorarioEntrega/Editar/@horarioEntrega.Id')" title="Editar"><i class="glyphicon glyphicon-edit"></i></button>
                                <button class="btn-link" style="color: #bc2026" onclick="Excluir('@Session["urlBase"]/HorarioEntrega/Excluir/@horarioEntrega.Id')" title="Excluir"><i class="glyphicon glyphicon-remove"></i></button>
                            </div>
                        </div>
                    </div>
                </div>

                <br />
            }

            <hr />

            <h2 style="margin-top: 10%">Dias de funcionamento</h2>
            int iDiaSemana = 0;

            foreach (var diasFuncionamento in Model.DiasDeFuncionamento)
            {
                iDiaSemana++;

                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <div class="col-md-6">
                            @if (iDiaSemana == 1)
                            { <h4>dia da semana</h4> }
                            <div class="bubble-item">
                                <p>@diasFuncionamento.DiaDaSemana</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            @if (iDiaSemana == 1)
                            { <h4>status</h4> }
                            <div class="bubble-item bubble-status">
                                @if (diasFuncionamento.Ativo)
                                {
                                    <input type="checkbox" value="None" id="status_@diasFuncionamento.Id" name="check" checked />
                                }
                                else
                                {
                                    <input type="checkbox" value="None" id="status_@diasFuncionamento.Id" name="check" />
                                }
                                <label for="#"></label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            @if (iDiaSemana == 1)
                            { <h4>ações</h4> }
                            <div class="text-center bubble-item">
                                <button class="btn-link" style="color: #1a9c21" onclick="Get('@Session["urlBase"]/HorarioEntrega/DesativarDiaFuncionamento/@diasFuncionamento.Id')" title="Ativar/Desativar"><i class="glyphicon glyphicon-off"></i></button>
                                @*<button class="btn-link" style="color: #bc2026" onclick="Excluir('@Session["urlBase"]/HorarioEntrega/ExcluirDiaFuncionamento/@diasFuncionamento.Id')" title="Excluir"><i class="glyphicon glyphicon-remove"></i></button>*@
                            </div>
                        </div>
                    </div>
                </div>

                <br />
            }
        }
    </div>
</div>
