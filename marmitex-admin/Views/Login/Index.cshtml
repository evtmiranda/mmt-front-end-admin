<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-3"></div>
            <div class="col-md-6 resumo-pedido" style="text-align: center">
                <h1>entrar</h1>
                <hr />
                <form method="post" action="@Session["urlBase"]/Login/Autenticar">
                    <div class="form-group">
                        <label for="email">e-mail:</label>
                        @if (@Model != null)
                        {
                            <input type="email" class="form-control" id="email" name="Email" required value="@Model.Email">
                        }
                        else
                        {
                            <input type="email" class="form-control" id="email" name="Email" required>
                        }
                    </div>
                    <div class="form-group">
                        <label for="pwd">senha:</label>
                        @if (@Model != null)
                        {
                            <input type="password" class="form-control" id="pwd" name="Senha" required value="@Model.Senha">
                        }
                        else
                        {
                            <input type="password" class="form-control" id="pwd" name="Senha" required>
                        }

                    </div>
                    @*<div class="checkbox">
                        <label><input type="checkbox"> lembrar minha senha</label>
                    </div>*@

                    @if (ViewBag.MensagemAutenticacao != null)
                    {
                        <br /><p style="color: #bc2026">@ViewBag.MensagemAutenticacao</p><br />
                    }

                    @*@if (Session["MensagemAutenticacao"] != null)
                    {
                        <br /><p style="color: #bc2026">@Session["MensagemAutenticacao"]</p><br />
                    }*@

                    <input type="submit" class="btn btn-vermelho-sem-animacao" value="entrar" />
                </form>

                <br />
                <br />
                <p>esqueceu sua senha?<a href="@Session["urlBase"]/Login/EsqueciASenha"> envie uma nova para o seu e-mail</a></p>
            </div>
        </div>
    </div>
</div>
